<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <me.panpf.sketch.sample.widget.SampleZoomImageView
        android:id="@+id/imageFragmentZoomImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/app_name" />

    <me.panpf.sketch.sample.widget.MappingView
        android:id="@+id/imageFragmentMapping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" />

    <me.panpf.sketch.sample.widget.HintView
        android:id="@+id/imageFragmentHint"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</FrameLayout>