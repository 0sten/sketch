<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/testIndicatorTestText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="MaskProgressIndicator"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@id/testIndicatorTestImage1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.github.panpf.sketch.sample.widget.MyImageView
        android:id="@+id/testIndicatorTestImage1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="12dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toTopOf="@id/testIndicatorTestText2"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/testIndicatorTestText1"
        tools:srcCompat="@drawable/im_placeholder" />

    <TextView
        android:id="@+id/testIndicatorTestText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="SectorProgressIndicator"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@id/testIndicatorTestImage2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/testIndicatorTestImage1" />

    <com.github.panpf.sketch.sample.widget.MyImageView
        android:id="@+id/testIndicatorTestImage2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="12dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toTopOf="@id/testIndicatorTestText3"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/testIndicatorTestText2"
        tools:srcCompat="@drawable/im_placeholder" />

    <TextView
        android:id="@+id/testIndicatorTestText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="RingProgressIndicator"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@id/testIndicatorTestImage3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/testIndicatorTestImage2" />

    <com.github.panpf.sketch.sample.widget.MyImageView
        android:id="@+id/testIndicatorTestImage3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="12dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toTopOf="@id/testIndicatorTestCheckBox1"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/testIndicatorTestText3"
        tools:srcCompat="@drawable/im_placeholder" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/testIndicatorTestCheckBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text="Hidden(0f)"
        app:layout_constraintBottom_toTopOf="@id/testIndicatorTestButton"
        app:layout_constraintEnd_toStartOf="@id/testIndicatorTestCheckBox2"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/testIndicatorTestImage3" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/testIndicatorTestCheckBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Hidden(1f)"
        android:checked="true"
        app:layout_constraintEnd_toStartOf="@id/testIndicatorTestCheckBox3"
        app:layout_constraintStart_toEndOf="@id/testIndicatorTestCheckBox1"
        app:layout_constraintTop_toTopOf="@id/testIndicatorTestCheckBox1" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/testIndicatorTestCheckBox3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="ShortStep"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/testIndicatorTestCheckBox2"
        app:layout_constraintTop_toTopOf="@id/testIndicatorTestCheckBox1" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/testIndicatorTestButton"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:text="Start"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/testIndicatorTestButton2"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/testIndicatorTestCheckBox1" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/testIndicatorTestButton2"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="0f -> 1f"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/testIndicatorTestButton"
        app:layout_constraintTop_toTopOf="@id/testIndicatorTestButton" />
</androidx.constraintlayout.widget.ConstraintLayout>