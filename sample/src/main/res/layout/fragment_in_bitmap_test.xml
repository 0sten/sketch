<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/inBitmapTestImage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:layout_weight="1"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/inBitmapTestText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="16dp"
        android:textColor="@color/text_normal"
        tools:text="INFO" />

    <LinearLayout
        android:id="@+id/inBitmapTestOperation1Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="4dp"
        android:paddingTop="4dp"
        android:paddingRight="4dp">

        <Button
            android:id="@+id/inBitmapTestSmallSizeButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:text="@string/button_small_size"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/inBitmapTestSizeSameButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:text="@string/button_same_size"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/inBitmapTestLargeSizeButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:text="@string/button_large_size"
            tools:ignore="ButtonStyle" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/inBitmapTestOperation2Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingBottom="4dp"
        app:flexDirection="row"
        app:flexWrap="wrap"
        app:justifyContent="space_around">

        <Button
            android:id="@+id/inBitmapTestWidthAndHeightSwapButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:text="@string/button_width_height_swap"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/inBitmapTestFixedTwoButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:text="@string/button_in_sample_size_is_2"
            tools:ignore="ButtonStyle" />
    </LinearLayout>
</LinearLayout>