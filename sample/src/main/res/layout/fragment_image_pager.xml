<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.github.panpf.sketch.sample.widget.MyImageView
        android:id="@+id/bgImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/toolsLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|end"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/settingsImage"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/bg_circle_accent"
            android:padding="8dp"
            app:srcCompat="@drawable/ic_settings"
            app:tint="@android:color/white" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/originImage"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/bg_circle_accent"
            android:padding="8dp"
            app:srcCompat="@drawable/ic_image2_outline"
            app:tint="@android:color/white" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/shareImage"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/bg_circle_accent"
            android:padding="8dp"
            app:srcCompat="@drawable/ic_share"
            app:tint="@android:color/white" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/saveImage"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/bg_circle_accent"
            android:padding="8dp"
            app:srcCompat="@drawable/ic_save"
            app:tint="@android:color/white" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/rotateImage"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/bg_circle_accent"
            android:padding="8dp"
            app:srcCompat="@drawable/ic_rotate_right"
            app:tint="@android:color/white" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/infoImage"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/bg_circle_accent"
            android:padding="8dp"
            app:srcCompat="@drawable/ic_info_baseline"
            app:tint="@android:color/white" />

        <TextView
            android:id="@+id/pageNumberText"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/bg_circle_accent"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            tools:ignore="RtlHardcoded"
            tools:text="29/100" />
    </LinearLayout>
</FrameLayout>