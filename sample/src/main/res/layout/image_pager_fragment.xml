<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.github.panpf.sketch.sample.widget.MyImageView
        android:id="@+id/imageViewerBgImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/imagePagerPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/imagePagerTools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|end"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imagePagerSettings"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/bg_circle_accent"
            android:padding="8dp"
            app:srcCompat="@drawable/ic_settings"
            app:tint="@color/text_normal" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imagePagerOrigin"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/bg_circle_accent"
            android:padding="8dp"
            app:srcCompat="@drawable/ic_image_2"
            app:tint="@color/text_normal" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imagePagerShare"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/bg_circle_accent"
            android:padding="8dp"
            app:srcCompat="@drawable/ic_share"
            app:tint="@color/text_normal" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imagePagerSave"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/bg_circle_accent"
            android:padding="8dp"
            app:srcCompat="@drawable/ic_save"
            app:tint="@color/text_normal" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imagePagerRotate"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/bg_circle_accent"
            android:padding="8dp"
            app:srcCompat="@drawable/ic_rotate_right"
            app:tint="@color/text_normal" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imagePagerInfo"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/bg_circle_accent"
            android:padding="8dp"
            app:srcCompat="@drawable/ic_info"
            app:tint="@color/text_normal" />

        <TextView
            android:id="@+id/imagePagerPageNumber"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/bg_circle_accent"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textColor="@color/text_normal"
            android:textSize="14sp"
            tools:ignore="RtlHardcoded"
            tools:text="29/100" />
    </LinearLayout>
</FrameLayout>