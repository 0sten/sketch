<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_item"
    android:padding="16dp">

    <com.github.panpf.sketch.sample.widget.MyListImageView
        android:id="@+id/videoItemIconImage"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/videoItemDurationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:singleLine="true"
        android:textColor="#88FFFFFF"
        android:textSize="12sp"
        android:shadowColor="@android:color/black"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        app:layout_constraintBottom_toBottomOf="@id/videoItemIconImage"
        app:layout_constraintEnd_toEndOf="@id/videoItemIconImage"
        tools:text="00:16" />

    <TextView
        android:id="@+id/videoItemNameText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:ellipsize="end"
        android:lines="2"
        android:textColor="#CCFFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/videoItemIconImage"
        app:layout_constraintTop_toTopOf="@id/videoItemIconImage"
        tools:text="发顺丰就撒娇发牢骚发顺丰就撒娇发牢骚发顺丰就撒娇发牢骚发顺丰就撒娇发牢骚 " />

    <TextView
        android:id="@+id/videoItemSizeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textColor="#88FFFFFF"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/videoItemIconImage"
        app:layout_constraintStart_toStartOf="@id/videoItemNameText"
        tools:text="100MB" />

    <TextView
        android:id="@+id/videoItemDateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:singleLine="true"
        android:textColor="#88FFFFFF"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/videoItemSizeText"
        app:layout_constraintStart_toEndOf="@id/videoItemSizeText"
        tools:text="2015-02-06" />
</androidx.constraintlayout.widget.ConstraintLayout>